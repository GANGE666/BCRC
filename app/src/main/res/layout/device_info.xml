<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <WebView
        android:id="@+id/Device_info_WebView"
        android:layout_width="match_parent"
        android:layout_height="1000px">

    </WebView>

    <Button
        android:id="@+id/Device_info_Init"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Init"/>

    <Button
        android:id="@+id/Device_info_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"/>

    <EditText
        android:id="@+id/Device_info_EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Message to hardware"/>

    <Button
        android:id="@+id/Device_info_Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"/>

    <Button
        android:id="@+id/Device_info_Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"/>
    <Button
        android:id="@+id/Device_info_Agency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agency"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Hardware"/>
    <Button
        android:id="@+id/Device_info_Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"/>

</LinearLayout>