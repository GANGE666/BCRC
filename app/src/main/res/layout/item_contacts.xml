<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bg"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_4"
        android:paddingLeft="@dimen/padding_3"
        android:paddingStart="@dimen/padding_3"
        android:paddingEnd="@dimen/padding_3"
        android:paddingRight="@dimen/padding_3">

        <ImageView
            android:id="@+id/img_contacts_avatar"
            android:layout_width="@dimen/icon_5"
            android:layout_height="@dimen/icon_5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tv_contacts_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_3"
            android:layout_marginStart="@dimen/padding_3"
            android:layout_toRightOf="@id/img_contacts_avatar"
            android:layout_toEndOf="@id/img_contacts_avatar"
            android:maxLines="1"
            android:textSize="@dimen/font_3"
            android:textColor="@color/color_black"/>
    </RelativeLayout>


</RelativeLayout>