/*整体定宽度居中*/
.main{
    width:380px;
    height:auto;
    margin: 0 auto;
	

}
/*图像位置大小*/
#image{
    width:70%;
    height:195px;
    margin-top: 20px;
    box-shadow:0px 0px 5px #999;
	margin: 0 auto;
}
/*包括速度和图像开关*/
.middle{
    width:70%;
    margin-top: 5px;
}
#speed{
    padding-top:20px;
    font-size: 1em;
}
/*开关部分样式*/
#switch{
    position:relative;
    margin-left: 190px;
    margin-top:-20px;
    width: 70px;
    height: 28px;
}
.toggle{
    position: absolute;
    border: 2px solid #666;
    border-radius: 20px;
    -webkit-transition: border-color .6s  ease-out;
    transition: border-color .6s  ease-out;
    box-sizing: border-box;
}
.toggle.toggle-on{
    border-color: rgba(137, 194, 217, .4);
    -webkit-transition: all .5s .15s ease-out;
    transition: all .5s .15s ease-out;
}
.toggle-button{
    position: absolute;
    top: 3px;
    width: 24px;
    bottom: 3px;
    right: 37px;
    background-color: #444;
    border-radius: 20px;
    cursor: pointer;
    -webkit-transition: all .3s .1s, width .1s, top .1s, bottom .1s;
    transition: all .3s .1s, width .1s, top .1s, bottom .1s;
}
.toggle-on .toggle-button{
    top: 2px;
    width: 62px;
    bottom: 2px;
    right: 2px;
    border-radius: 23px;
    background-color: #89c2da;
    box-shadow: 0 0 16px #4b7a8d;
    -webkit-transition: all .2s .1s, right .1s;
    transition: all .2s .1s, right .1s;
}
.toggle-text-on{
    position: absolute;
    top: -6px;
    left: 0;
    right: 0;
    line-height: 36px;
    text-align: center;
    font-family: 'Quicksand', sans-serif;
    font-size: 16px;
    font-weight: normal;
    cursor: pointer;
    -webkit-user-select: none; /* Chrome/Safari */
    -moz-user-select: none; /* Firefox */
    -ms-user-select: none; /* IE10+ */
    color: rgba(0,0,0,0);
}
.toggle-on .toggle-text-on{
    color: #3b6a7d;
    -webkit-transition: color .3s .15s ;
    transition: color .3s .15s ;
}
.toggle-text-off{
    position: absolute;
    top: -5px;
    right: 5px;
    line-height: 36px;
    text-align: center;
    font-family: 'Quicksand', sans-serif;
    font-size: 14px;
    font-weight: bold;
    -webkit-user-select: none; /* Chrome/Safari */
    -moz-user-select: none; /* Firefox */
    -ms-user-select: none; /* IE10+ */
    cursor: pointer;
    color: #444;
}
.toggle-on .toggle-text-off{color: rgba(0,0,0,0);}
/* used for streak effect */
.glow-comp{
    position: absolute;
    opacity: 0;
    top: 10px;
    bottom: 10px;
    left: 10px;
    right: 10px;
    border-radius: 6px;
    background-color: rgba(75, 122, 141, .1);
    box-shadow: 0 0 12px rgba(75, 122, 141, .2);
    -webkit-transition: opacity 4.5s 1s;
    transition: opacity 4.5s 1s;
}
.toggle-on .glow-comp{
    opacity: 1;
    -webkit-transition: opacity 1s;
    transition: opacity 1s;
}



/*按钮组部分样式*/
.header {
    padding: 10px;
}
.row{
    padding: 20px;
}
.bottom{
    padding: 10px;
}
.row:after {
    content: "";
    clear: both;
    display: block;
}
[class*="col-"] {
    float: left;
}
.col-1 {width: 33%;}

button {
    position:relative;
    outline:none;
    color: rgba(255,255,255,1);
    text-decoration: none;
    background-color:#50c766;
    font-family: 'Yanone Kaffeesatz';
    font-weight: 700;
    font-size: 2em;
    display: block;
    padding: 4px;
    -webkit-border-radius: 8px;
    -moz-border-radius: 8px;
    border-radius: 8px;
    box-shadow:  #4b7a8d;
    -webkit-box-shadow: 0px 9px 0px #318f42 , 0px 9px 25px #999;
    -moz-box-shadow: 0px 9px 0px #318f42, 0px 9px 25px #999;
    box-shadow: 0px 4px 0px #318f42, 0px 4px 25px #999;
    margin:8px auto;
    width: 70px;
    text-align: center;
    -webkit-transition: all .1s ease;
    -moz-transition: all .1s ease;
    -ms-transition: all .1s ease;
    -o-transition: all .1s ease;
    transition: all .1s ease;
}